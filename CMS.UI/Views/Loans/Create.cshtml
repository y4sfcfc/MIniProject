@model LoanVM
﻿﻿


<h1>Create</h1>
<hr>
<form asp-action="Create">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
			@Html.HiddenFor(l=>l.CustomerId)
			@Html.HiddenFor(l=>l.ProductId)
				<label asp-for="Terms" class="formbold-form-label">
					Terms
				</label>
				<select asp-for="Terms" class="formbold-form-select form-control" asp-items="@(new SelectList(Model.TermList))">
					<option>Please select one</option>
				</select>
				<span asp-validation-for="Terms" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="Count" class="control-label"></label>
				<input asp-for="Count" class="form-control" />
				<span asp-validation-for="Count" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row mt-3 ">
		<div class="col-md-3">
		
			<a class="btn btn-primary" href="@ViewBag.Backurl">Back</a>
		</div>
		<div class="col-md-3 d-flex justify-content-end">
			<div class="form-group">

				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</div>
	</div>

</form>