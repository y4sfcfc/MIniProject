@model List<LoanItemVM>

﻿﻿﻿@{
	ViewData["Title"] = "Index";
}
<div class="container-fluid">
	<div class="container">
		<div class="d-flex justify-content-end mb-3">  @Html.ActionLink("Add", "Create", "LoanItems", null, new { @class = "btn btn-primary" })</div>

		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Product</th>
					<th scope="col">Loan Title</th>
					<th scope="col">Count</th>
					<th scope="col">Price</th>
					<th scope="col">Operation</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<th scope="row">@item.Id</th>
						<th scope="row">@item.Product.Name</th>
						<td>@item.Loan.Title</td>
						<td>@item.Count</td>
						<td>@item.Price</td>
						<td>
							<a class="btn btn-warning" asp-area="admin" asp-controller="LoanItems" asp-action="Edit" asp-route-Id="@item.Id">
								<i class="far fa-pen-to-square"></i>

							</a>
							<a class="btn btn-danger" asp-area="admin" asp-controller="LoanItems" asp-action="Delete" asp-route-id="@item.Id">
								<i class="fas fa-trash-can"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>
