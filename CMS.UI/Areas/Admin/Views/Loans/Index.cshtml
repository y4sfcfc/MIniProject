@model List<LoanVM>

﻿﻿﻿@{
	ViewData["Title"] = "Index";
}
<div class="container-fluid">
	<div class="container">
		<div class="d-flex justify-content-end mb-3">  @Html.ActionLink("Add", "Create", "Loans", null, new { @class = "btn btn-primary" })</div>

		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Title</th>
					<th scope="col">Status</th>
					<th scope="col">Employee</th>
					<th scope="col">Monthly Price</th>
					<th scope="col">Total Price</th>
					<th scope="col">Terms</th>
					<th scope="col">Address</th>
					<th scope="col">Customer</th>
					<th scope="col">Operation</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<th scope="row">@item.Id</th>
						<td>@item.Title</td>
						<td>@item.Status</td>
						<th scope="row">@item.Employee?.Name @item.Employee?.Surname</th>
						<td>@item.MonthlyPrice</td>
						<th scope="row">@item.TotalPrice</th>
						<td>@item.Terms</td>
						<td>@item.Customer.Address</td>
						<th scope="row">@item.Customer.Name @item.Customer.Surname</th>

						<td>
							<a class="btn btn-warning" asp-area="admin" asp-controller="Loans" asp-action="Edit" asp-route-id="@item.Id">
								<i class="far fa-pen-to-square"></i>

							</a>
							<a class="btn btn-danger" asp-area="admin" asp-controller="Loans" asp-action="Delete" asp-route-id="@item.Id">
								<i class="fas fa-trash-can"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>
