@model IEnumerable<CMS.UI.Models.ProductVM>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Id
			</th>
			<th>Thumbnail</th>
			<th>
				Name
			</th>
			<th>
				Category
			</th>
			<th>
				Price
			</th>
			<th>
				Description
			</th>
			<th>
				Count
			</th>
			<th>
				Model
			</th>
			<th>
				Brand
			</th>
			<th>
				Operation
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@item.Id
				</td>
				<td>
				<img width="140px" height="100px" src="@Url.Content($"~/{item.Thumbnail}")" alt="Alternate Text" /></td>
				<td>
					@item.Name
				</td>
				<td>
					@item.CategoryName
				</td>
				<td>
					@item.Price 
				</td>
				<td>
					@item.Description
				</td>
				<td>
					@item.Count
				</td>
				<td>
					@item.Model
				</td>
				<td>
					@item.Brand
				</td>
				<td>
					<a class="btn btn-warning" asp-area="admin" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">
						<i class="far fa-pen-to-square"></i>

					</a>
					<a class="btn btn-danger" asp-area="admin" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">
						<i class="fas fa-trash-can"></i>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
